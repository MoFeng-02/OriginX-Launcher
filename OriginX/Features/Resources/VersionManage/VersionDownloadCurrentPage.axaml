<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:lang="clr-namespace:OriginX.Language"
             xmlns:converter="clr-namespace:OriginX.Converts"
             xmlns:suki="https://github.com/kikipoulet/SukiUI"
             xmlns:mid="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:vm="clr-namespace:OriginX.ViewModels.Versions"
             xmlns:module="clr-namespace:OriginX.Features.Resources.VersionManage.Module"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:VersionDownloadCurrentViewModel"
             x:Class="OriginX.Features.Resources.VersionManage.VersionDownloadCurrentPage">
    <UserControl.Resources>
        <ResourceDictionary>
            <converter:BoolNegationConverter x:Key="BoolNegationConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid RowDefinitions="Auto Auto * Auto">
        <Grid ColumnDefinitions="Auto * Auto *">
            <TextBlock Text="{x:Static lang:AppLang.选择版本}" Margin="10 0" VerticalAlignment="Center" />
            <TextBox Grid.Column="1" Text="{Binding VersionName}" Margin="10 0" VerticalAlignment="Center" />
            <TextBlock Grid.Column="2" Text="{x:Static lang:AppLang.选择_Mod_加载器}" Margin="10 0" VerticalAlignment="Center" />
            <TextBlock Grid.Column="3" Text="{Binding ModLoaderType}" Margin="10 0" VerticalAlignment="Center" />
        </Grid>
        <!-- 步骤 -->
        <Grid Grid.Row="1" ColumnDefinitions="*,Auto"
              HorizontalAlignment="Stretch"
              Margin="0,10,0,0">
            <suki:Stepper AlternativeStyle="True" Index="2" Steps="{Binding Steps}" />
        </Grid>
        <module:DownloadItems Grid.Row="2" />
        <Grid Grid.Row="3" ColumnDefinitions="* Auto">
            <Button Classes="Flat" Margin="5" Command="{Binding DownloadCommand}">
                <StackPanel Orientation="Horizontal">
                    <mid:MaterialIcon Kind="CloudDownloadOutline" VerticalAlignment="Center" />
                    <TextBlock Text="{x:Static lang:AppLang.下载}" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
            <Button Grid.Column="1" Margin="5">
                <StackPanel>
                    <mid:MaterialIcon Kind="AutoDownload" VerticalAlignment="Center" />
                    <TextBlock Text="{x:Static lang:AppLang.后台下载}" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</UserControl>